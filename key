  <script>
    function getQueryParam(name) {
      const params = new URLSearchParams(window.location.search);
      return params.get(name);
    }

    const key = getQueryParam('key');
    const msg = document.getElementById('msg');
    const box = document.getElementById('box');
    const keyval = document.getElementById('keyval');
    const copyBtn = document.getElementById('copyBtn');

    if (!key) {
      msg.textContent = "Kh√¥ng t√¨m th·∫•y key. Vui l√≤ng th√™m ?key=GI√Å_TR·ªä v√†o URL.";
      msg.classList.add('error');
    } else {
      msg.style.display = 'none';
      box.style.display = 'block';
      keyval.textContent = key;
    }

    copyBtn.addEventListener('click', async () => {
      try {
        await navigator.clipboard.writeText(key);
        copyBtn.textContent = 'ƒê√£ sao ch√©p ‚úì';
        setTimeout(() => {
          copyBtn.textContent = 'Sao ch√©p key';
        }, 1500);
      } catch (e) {
        alert('Kh√¥ng th·ªÉ sao ch√©p, vui l√≤ng copy th·ªß c√¥ng.');
      }
    });
  </script>

